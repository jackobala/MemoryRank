{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/submit-score", "dest": "/backend/server.js" },
    { "src": "/leaderboard", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ]
}
